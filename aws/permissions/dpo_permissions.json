{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "DPOReadAllSensitiveS3",
        "Effect": "Allow",
        "Action": "s3:GetObject",
        "Resource": [
          "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/hr/*",
          "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/finance/*",
          "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/medical/*",
          "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/audit/*"
        ]
      },
      {
        "Sid": "DPODecryptAllSensitiveKMS",
        "Effect": "Allow",
        "Action": [
          "kms:Decrypt",
          "kms:DescribeKey"
        ],
        "Resource": "arn:aws:kms:eu-central-1:<ACCOUNT_ID>:key/<KEY_ID>",
        "Condition": {
          "StringEquals": {
            "kms:ViaService": "s3.eu-central-1.amazonaws.com"
          },
          "ForAnyValue:StringLike": {
            "kms:EncryptionContext:aws:s3:arn": [
              "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/hr/*",
              "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/finance/*",
              "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/medical/*",
              "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/audit/*"
            ]
          }
        }
      }
    ]
  }