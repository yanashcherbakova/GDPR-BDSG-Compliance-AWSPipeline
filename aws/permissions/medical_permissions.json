{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "MedicalReadWriteS3",
			"Effect": "Allow",
			"Action": [
				"s3:GetObject",
				"s3:PutObject"
			],
			"Resource": "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/medical/*"
		},
		{
			"Sid": "MedicalUseKMS",
			"Effect": "Allow",
			"Action": [
				"kms:Decrypt",
				"kms:Encrypt",
				"kms:GenerateDataKey",
				"kms:DescribeKey"
			],
			"Resource": "arn:aws:kms:eu-central-1:<ACCOUNT_ID>:key/<KEY_ID>",
			"Condition": {
				"StringEquals": {
					"kms:ViaService": "s3.eu-central-1.amazonaws.com"
				},
				"ForAnyValue:StringLike": {
					"kms:EncryptionContext:aws:s3:arn": "arn:aws:s3:::gdpr-sensitive-bucket-<ACCOUNT_ID>/medical/*"
				}
			}
		}
	]
}